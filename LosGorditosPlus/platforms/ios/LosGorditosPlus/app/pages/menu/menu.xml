<page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:widgets="shared/widgets"
  xmlns:statusbar="nativescript-statusbar"
  loaded="loaded"
  actionBarHidden="true">

  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>
      <!-- Home page contents -->
      <stack-layout loaded="mainContentLoaded" class="menu-background">
        <StackLayout orientation="horizontal" margin="15" >
          <image src="res://ic_menu" id="menu" tap="toggleDrawer" height="20" />
        </StackLayout>

        <StackLayout margin="15" >
          <image src="~/images/1_Icons/recursos-23.png" id="menu" tap="changeFavoritos" height="45" />
          <label text="favoritos" horizontalAlignment="center" />   
        </StackLayout>
        
        <StackLayout margin="15" >
          <image src="~/images/1_Icons/recursos-24.png" id="menu" tap="toggleDrawer" height="45" />
          <label text="principales" horizontalAlignment="center" />   
        </StackLayout>
        
        <StackLayout margin="15" >
          <image src="~/images/1_Icons/recursos-25.png" id="menu" tap="toggleDrawer" height="45" />
          <label text="ensaladas" horizontalAlignment="center" />   
        </StackLayout>
        
        <StackLayout margin="15" >
          <image src="~/images/1_Icons/recursos-26.png" tap="toggleDrawer" height="45" />
          <label text="postres" horizontalAlignment="center" />   
        </StackLayout>
        
        <StackLayout margin="15" >
          <image src="~/images/1_Icons/recursos-27.png" id="menu" tap="toggleDrawer" height="45" />
          <label text="bebidas" horizontalAlignment="center" />   
        </StackLayout>
        
      </stack-layout>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>
