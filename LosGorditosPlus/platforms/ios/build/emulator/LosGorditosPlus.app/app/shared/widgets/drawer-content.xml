<grid-layout class="drawer-content">
  <stack-layout>
   {() => selectedPage == "menu" ? 
          {<StackLayout orientation="horizontal" margin="15" >
                <image src="res://ic_menu" id="menu" tap="toggleDrawer" height="20" />
              </StackLayout>}
           : '' }}
  	<StackLayout orientation="horizontal" margin="10" paddingLeft="5">
      <image src="~/images/1_Icons/recursos-02.png" height="37" tap="navigate"/>
	    <label text="menú" id="menulist" tap="navigate" marginLeft="10"/>
      <image src="{{ selectedPage == 'menulist' ? '~/images/1_Icons/recursos-06.png' : '' }}" class="activity-menu"/>
  	</StackLayout>

    <StackLayout class="line"/>

  	<StackLayout orientation="horizontal" margin="10" paddingLeft="5">
      <image src="~/images/1_Icons/recursos-03.png" height="37" tap="navigate"/>
      <label text="información" id="about" tap="navigate" marginLeft="10"/>
      <image src="{{ selectedPage == 'about' ? '~/images/1_Icons/recursos-06.png' : '' }}" class="activity-about"/>
    </StackLayout>

    <StackLayout class="line"/>

    <StackLayout orientation="horizontal" margin="10" paddingLeft="5">
      <image src="~/images/1_Icons/recursos-04.png" height="27"/>
      <label text="contacto" id="contact" marginLeft="10"/>
      <image src="{{ selectedPage == 'contact' ? '~/images/1_Icons/recursos-06.png' : '' }}" class="activity-contact" />
    </StackLayout>

    <StackLayout class="line"/>

    <StackLayout orientation="horizontal" margin="10" paddingLeft="5">
      <image src="~/images/1_Icons/recursos-05.png" height="37" marginLeft="7"/>
      <label text="ubicaciones" id="location" marginLeft="17"/>
      <image src="{{ selectedPage == 'location' ? '~/images/1_Icons/recursos-06.png' : '' }}" class="activity-location" />
    </StackLayout>

    <StackLayout class="line"/>
  </stack-layout>
  <GridLayout rows="auto,auto" horizontalAlignment="center" verticalAlignment="bottom">
      <image src="~/images/3_Logos/recursos-39.png" height="55" row="0" />
      <label row="1" height="30"/>
  </GridLayout>

</grid-layout>